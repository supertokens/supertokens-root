utils_path="./scripts/core"

exitIfNeeded () {
  if [ $? -ne 0 ]
	then
		exit 1
	fi
}

prefix=`(cd ../../../ && $utils_path/project-prefix)`
(cd ../../ && ./gradlew :$prefix-core:cli:clean < /dev/null)

exitIfNeeded

(cd ../../ && ./gradlew :$prefix-core:cli:build -x test < /dev/null)

exitIfNeeded

(cd ../../ && ./gradlew :$prefix-core:cli:copyJars < /dev/null)

exitIfNeeded

if [ $# -eq 0 ]
then
	rm -rf ./jar/*
	cp ./build/libs/* ./jar
fi
