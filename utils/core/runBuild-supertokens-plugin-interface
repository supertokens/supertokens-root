utils_path="./utils/core"

exitIfNeeded () {
  if [ $? -ne 0 ]
	then
		exit 1
	fi
}

prefix=`(cd ../../ && $utils_path/project-prefix)`
(cd ../../ && ./gradlew :$prefix-plugin-interface:clean < /dev/null)

exitIfNeeded

(cd ../../ && ./gradlew :$prefix-plugin-interface:build -x test < /dev/null)

exitIfNeeded

(cd ../../ && ./gradlew :$prefix-plugin-interface:copyJars < /dev/null)

exitIfNeeded

if [ $# -eq 0 ]
then
	rm -rf ./jar/*
	cp ./build/libs/* ./jar
fi
